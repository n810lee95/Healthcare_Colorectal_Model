import matplotlib.pyplot as plt
import seaborn as sns
import pandas as pd

# Convert csv to a pandas df
df = pd.read_csv(colorectal_cancer_dataset.csv)

# Scatter plot of Tumor Size by Age and Country
plt.figure(figsize=(10, 5))
sns.scatterplot(data=df, x='Age', y = 'Tumor_Size_mm', hue='Screening_History', alpha = 0.7).set(title='Scatterplot of Tumor Sizes (mm)')



# Country Bar graphs for Obesity, Diet, and Physical Activity and colored by Gender
fig, axes = plt.subplots(1,3,figsize=(20,5))
sns.barplot(data=df, x='Obesity_BMI', y='Patient_ID', ax=axes[0], hue='Gender').set(title='Obesity by Gender')
sns.barplot(data=df, x='Diet_Risk', y='Patient_ID', ax=axes[1], hue='Gender').set(title='Diet by Gender')
sns.barplot(data=df, x='Physical_Activity', y='Patient_ID', ax=axes[2], hue='Gender').set(title='Physical Activity by Gender')
for ax in fig.axes:
    plt.sca(ax)
    plt.xticks(rotation=90);

# Box plot of Healthcare Costs by Treatment Type
plt.figure(figsize=(8, 5))
sns.boxplot(data=df, x='Treatment_Type', y='Healthcare_Costs', palette='viridis')
plt.title("Healthcare Costs by Treatment Type")

# Violin plot of Tumor Size Depending on Genetic Mutation
plt.figure(figsize=(8, 5))
sns.violinplot(x='Genetic_Mutation', y='Tumor_Size_mm', data=df, palette='muted')
plt.title("Healthcare Costs Distribution by Cancer Stage")

# Pairplot for Key Numeric Features
sns.pairplot(df[['Age', 'Tumor_Size_mm', 'Healthcare_Costs', 'Incidence_Rate_per_100K','Mortality_Rate_per_100K']], diag_kind='kde')


# Heatmap for Correlation between numeric variables
plt.figure(figsize=(14, 7))
sns.heatmap(df.corr(numeric_only=True), annot=True, cmap='mako',fmt=".3f")
plt.title("Correlation Heatmap")

plt.show()
